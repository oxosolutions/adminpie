CREATE TABLE `ocrm_175_opening_applicant_mapping` (
  `id` int(10) UNSIGNED NOT NULL,
  `applicant_id` int(11) NOT NULL,
  `opening_id` int(11) NOT NULL,
  `status` int(11) NOT NULL DEFAULT '1',
  `created_at` timestamp NULL DEFAULT NULL,
  `updated_at` timestamp NULL DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;



CREATE TABLE `ocrm_175_applicants` (
  `id` int(10) UNSIGNED NOT NULL,
  `name` varchar(255) COLLATE utf8mb4_unicode_ci NOT NULL,
  `email` varchar(255) COLLATE utf8mb4_unicode_ci DEFAULT NULL,
  `password` int(11) NOT NULL,
  `status` int(11) NOT NULL DEFAULT '1',
  `created_at` timestamp NULL DEFAULT NULL,
  `updated_at` timestamp NULL DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;

CREATE TABLE `ocrm_175_applicantions` (
  `id` int(10) UNSIGNED NOT NULL,
  `key` varchar(255) COLLATE utf8mb4_unicode_ci NOT NULL,
  `value` varchar(255) COLLATE utf8mb4_unicode_ci DEFAULT NULL,
  `created_at` timestamp NULL DEFAULT NULL,
  `updated_at` timestamp NULL DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;

CREATE TABLE `ocrm_175_openings` (
  `id` int(10) UNSIGNED NOT NULL,
  `title` varchar(255) COLLATE utf8mb4_unicode_ci NOT NULL,
  `department` varchar(255) COLLATE utf8mb4_unicode_ci DEFAULT NULL,
  `designation` int(11) NOT NULL,
  `Skills` int(11) NOT NULL DEFAULT '1',
  `job_type` int(11) NOT NULL DEFAULT '1',
  `location` int(11) NOT NULL DEFAULT '1',
  `number_of_post` int(11) NOT NULL DEFAULT '1',
  `minium_qualification` int(11) NOT NULL DEFAULT '1',
  `experience` int(11) NOT NULL DEFAULT '1',
  `working_day` int(11) NOT NULL DEFAULT '1',
  `working_hour` int(11) NOT NULL DEFAULT '1',
  `office_hour_start` int(11) NOT NULL DEFAULT '1',
  `office_hour_end` int(11) NOT NULL DEFAULT '1',
  `package_type` int(11) NOT NULL DEFAULT '1',
  `minimum_package` int(11) NOT NULL DEFAULT '1',
  `maximum_package` int(11) NOT NULL DEFAULT '1',
  `minimum_age_for_apply` int(11) NOT NULL DEFAULT '1',
  `maximum_age_for_apply` int(11) NOT NULL DEFAULT '1',
  `interview_mode` int(11) NOT NULL DEFAULT '1',
  `opening_open` int(11) NOT NULL DEFAULT '1',
  `opening_close` int(11) NOT NULL DEFAULT '1',
  `email` int(11) NOT NULL DEFAULT '1',
  `phone` int(11) NOT NULL DEFAULT '1',
  `hr_name` int(11) NOT NULL DEFAULT '1',
  `description` int(11) NOT NULL DEFAULT '1',
  `created_at` timestamp NULL DEFAULT NULL,
  `updated_at` timestamp NULL DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;

  ALTER TABLE `ocrm_175_openings`
  ADD PRIMARY KEY (`id`);

  ALTER TABLE `ocrm_175_openings`
  MODIFY `id` int(10) UNSIGNED NOT NULL AUTO_INCREMENT;




	









